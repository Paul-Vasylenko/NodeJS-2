{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"lib": ["ESNext"],
		"target": "ESNext",
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./"
	},
	"compileOnSave": true,
	"include": ["src", ".eslintrc.cjs"]
}
